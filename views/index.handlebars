<div class="container">
     <div class="text-center"> 
  <h1>Burgers!</h1>
  </div>
  <div class="row">

    <div class="col-md-6 text-center">
 
      <h2>Burgers not devoured</h2>
   

      
      {{#each data_burger}}
      {{#unless this.devoured}}

      <div class="row">
        <div class="col-md-3 mt-4">
          {{this.burger_name}}
        </div>
        <div class="col-md-1 mr-5">
          <form>
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
            <button type="button" data-id={{this.id}} class="btn-default devour-list"> Devour! </button>
          </form>
        </div>
      </div>


      {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-6 text-center">

      <h2>Burgers devoured</h2>
      {{#each data_burger}}
      {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
      {{/if}}
      {{/each}}
    </div>
  </div>

<div class="burgerContainer">
  <h2>Add a Burger</h2>
  <form action="/burgers/create" method="POST">
    <input type="text" id="burger" name="burger_name">
    <button type="submit">Add Burger</button>
  </form>
  <label for="ca">Type the burger that you want to eat:</label>
  
</div>
<div class="form-group">
</div>
</form>
</div>
</div>







