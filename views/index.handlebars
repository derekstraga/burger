<h1>Burgers!</h1>
<h2>Burgers not devoured</h2>
<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>
<ul>
    <div class="col-md-6" 
  {{#each data_burger}}
    {{#unless this.devoured}}
      <pre>{{this.id}}. {{this.burger_name}}
                    </pre>
{{/unless}}
{{/each}}


<button type="submit">Devour </button>
</ul>
<h2>Add a Cat</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Type the burger that you want to eat:</label>
    <input type="text" id="cat" name="name">
  </div>
  <div class="form-group">
  </div>
  <form action="/burgers/create" method="post"></form>
  <button type="submit">Add Cat</button>
  </form>
