<h1>Burgers!</h1>
<h2>Burgers not devoured</h2>
<ul>
  {{#each data_burger}}
    {{#unless devoured}}
      {{burger_name}}  <button>Devoured</button>
      <br>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>
 
 
  {{#each data_burger}}
    {{#if devoured}}
       {{burger_name}} <br>
                
{{/if}}
{{/each}}

 
<h2>Add a Burger</h2>
<form class="create-form" action="/burgers/create" method="POST">
  <div class="form-group" >
    <label for="ca">Type the burger that you want to eat:</label>
    <input type="text" id="burger" name="burger_name">
  </div>
  <div class="form-group">
  </div>
  <button type="submit">Add Burger</button>
  </form>
